{# templates/lucky/number.html.twig #}
{% extends 'admin-base.html.twig'%}


{% block stylesheets %}
{% endblock %}


{% block title 'Administration des utilisateurs | Orientation Authentique' %}

{% block big_title 'Gestion des Utilisateurs' %}


{% block body %}
  <h2>Liste des membres</h2>
  <table class="uk-table uk-table-small uk-table-divider">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nom</th>
        <th>Login</th>
        <th>Email</th>
        <th>Commune</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% set i = 0 %}
      {% for user in users %}
        {% set i = i + 1 %}
        <tr>
          <td>{{ i }}</td>
          <td>{{ user.nom }} {{ user.pnom }}</td>
          <td>{{ user.username }}</td>
          <td><a class="white-text" href="mailto:{{ user.email }}" uk-tooltip="title: Envoyer un mail à l'utilisateur; pos: top">{{ user.email }}</a></td>
          <td>{{ user.residence }}</td>
          <td>
            <a href="{{ path('user.info', {id: user.id}) }}" uk-icon="icon: file-edit" uk-tooltip="title: Voir infos user; pos: top"></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="uk-pagination uk-flex-center">
    {{ knp_pagination_render(users) }}
  </div>
{% endblock %}



{% block javascripts %}
{% endblock %}
