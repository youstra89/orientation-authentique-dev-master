{{ form_start(form) }}
  <fieldset class="uk-fieldset">
    <div class="uk-grid">
      <div class="uk-width-1-2@s">
        {{ form_row(form.discipline, { 'attr': {'class': 'uk-select'} }) }}
      </div>
      <div class="uk-width-1-2@s">
        {{ form_row(form.livre, { 'attr': {'class': 'uk-select'} }) }}
      </div>
    </div><br>
    <div class="uk-grid">
      <div class="uk-width-1-3@s">
        {{ form_row(form.heure, { 'attr': {'class': 'uk-input'} }) }}
      </div>
      <div class="uk-width-1-3@s">
        {{ form_row(form.jour, { 'attr': {'class': 'uk-input'} }) }}
      </div>
      <div class="uk-width-1-3@s">
        {{ form_row(form.annee_debut, { 'attr': {'class': 'uk-input'} }) }}
      </div>
    </div><br>
  </fieldset><br>
  {{ form_rest(form) }}
  <button class="uk-button uk-button-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
