{{ form_start(form) }}
  <fieldset class="uk-fieldset">
    <div class="uk-margin">
      {{ form_row(form.nom, { 'attr': {'class': 'uk-input'} }) }}
    </div>
    <div class="uk-grid">
      <div class="uk-width-1-2@s">
        {{ form_row(form.author, { 'attr': {'class': 'uk-input'} }) }}
      </div>
      <div class="uk-width-1-2@s">
        {{ form_row(form.description, { 'attr': {'class': 'uk-input'} }) }}
      </div>
    </div><br>
    <div class="uk-margin">
      {{ form_row(form.disciplines, { 'attr': {'class': 'uk-select'} }) }}
    </div>
  </fieldset><br>

  {{ form_rest(form) }}
  <button class="uk-button uk-button-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
