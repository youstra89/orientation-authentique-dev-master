{# templates/lucky/number.html.twig #}
{% extends 'Admin/Localite/index.html.twig'%}


{% block stylesheets %}
{% endblock %}


{% block title 'Régions enregistrées | Orientation Authentique' %}

{% block big_title 'Gestion des régions' %}



{% block content %}
  <h2>Régions enrégistrées</h2>
  <div class="uk-hidden@s">
    <p uk-margin>
      <a class="uk-button uk-button-default" href="{{ path('livre.add') }}">Ajouter</a>
    </p>
  </div>
  <table class="uk-table uk-table-small uk-table-divider">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nom</th>
        <th>Auteur</th>
        <th>Disciplines</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% set i = 0 %}
      {% for livre in livres %}
        {% set i = i + 1 %}
        <tr>
          <td>{{ i }}</td>
          <td>{{ livre.nom }}</td>
          <td>{{ livre.localisationType }}</td>
          <td><a href="{{ path('livre.edit', {id: livre.id}) }}" uk-icon="icon: file-edit" uk-tooltip="title: Editer la région; pos: top"></a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}



{% block body %}
{% endblock %}


{% block javascripts %}
{% endblock %}
