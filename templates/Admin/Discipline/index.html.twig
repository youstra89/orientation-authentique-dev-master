{# templates/lucky/number.html.twig #}
{% extends 'admin-base.html.twig'%}


{% block stylesheets %}
{% endblock %}


{% block title 'Administration des cours | Orientation Authentique' %}

{% block big_title 'Gestion des cours' %}




{% block notification %}
  {% for message in app.flashes('success') %}
    <div class="uk-container uk-padding-small">
      <div class="uk-alert-success" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p>{{ message }}</p>
      </div>
    </div>
  {% endfor %}
  {% for message in app.flashes('error') %}
    <div class="uk-container uk-padding-small">
      <div class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p>{{ message }}</p>
      </div>
    </div>
  {% endfor %}
{% endblock %}




{% block contextual_menu %}
  {% include('Admin/contextual-menu-courses.html.twig') %}
{% endblock %}


{% block content %}
  <h2>Disciplines enrégistrées</h2>
  <div class="uk-hidden@s">
    <p uk-margin>
      <a class="uk-button uk-button-default" href="{{ path('discipline.add') }}">Ajouter</a>
    </p>
  </div>
  <div class="">
    <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-text-center" uk-sortable="handle: .uk-sortable-handle" uk-grid>
      {% for discipline in disciplines %}
        <li>
          <div class="uk-card uk-card-default uk-card-body uk-animation-toggle">
            <span class="uk-sortable-handle uk-margin-small-right" uk-icon="icon: table"></span><br>
            {{ discipline.nom }}
            <a href="{{ path('discipline.edit', {id: discipline.id}) }}" uk-icon="icon: file-edit" uk-tooltip="title: Editer la discipline; pos: top"></a>
          </div>
        </li>
      {% endfor %}
    </ul>
    <div class="uk-pagination uk-flex-center">
      {{ knp_pagination_render(disciplines) }}
    </div>
  </div>
{% endblock %}



{% block body %}
{% endblock %}


{% block javascripts %}
{% endblock %}
