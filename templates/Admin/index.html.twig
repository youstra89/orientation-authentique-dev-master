{% endblock %}



{% block body %}
<div class="uk-container">
  <table class="uk-table uk-table-middle uk-table-divider">
    <thead>
        <tr>
            <th class="uk-width-small">Eléments</th>
            <th>Descriptions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>Regions</strong></td>
            <td>Il y a, actuellement dans la base de données, <strong>{{ regions }}</strong> enregistrées.</td>
            <td><a href="{{ path('regions') }}" class="uk-button uk-button-primary" type="button">Plus...</a></td>
        </tr>
        <tr>
            <td><strong>Villes</strong></td>
            <td>Il y a, actuellement dans la base de données, <strong>{{ villes }}</strong> enregistrées.</td>
            <td><a href="{{ path('villes') }}" class="uk-button uk-button-primary" type="button">Plus...</a></td>
